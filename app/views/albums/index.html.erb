<h1>Albums</h1>
<p class="success-notice"><%= notice %></p>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Album</th>
      <th>Artist</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td class="col-4"><%= album.name %></td>
        <td class="col-4"><%= Artist.find(album.artist_id).name %>
        <td class="col-2"><%= link_to "Edit", edit_album_path(album), :class=>"btn btn-success" %></td>
        <td class="col-2"><%= button_to "Delete", album, method: :delete, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="button-div">
  <%= link_to "New album", new_album_path, :class=>"btn btn-primary buttons" %>
</div>
<div class="button-div">
  <%= link_to "Artists", artists_path(), :class=>"btn btn-primary buttons" %>
</div>