<h1>Artists</h1>
<p class="success-notice"><%= notice %></p>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td class="col-8"><%= artist.name %></td>
        <td class="col-2"><%= link_to "Edit", edit_artist_path(artist), :class=>"btn btn-success" %></td>
        <td class="col-2"><%= button_to "Delete", artist, method: :delete, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="button-div">
  <%= link_to "New artist", new_artist_path, :class=>"btn btn-primary buttons" %>
</div>
<div class="button-div">
  <%= link_to "Albums", albums_path(), :class=>"btn btn-primary buttons" %>
</div>
